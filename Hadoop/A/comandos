start-dfs.sh # Inicializa o HDFS

start-yarn.sh # Inicializa o Yarn

jps # Verifica se todos foram iniciados

# cria diretório no HDFS

hdfs dfs -mkdir nome_do_diretorio 

# Verifica tudo o que tem no HDFS
hdfs dfs -ls /


# Verifica tudo o que tem na pasta dentro do HDFS
hdfs dfs -ls /nome_da_pasta

# Envia dados para o HDFS, deve ser executado a partir da pasta onde os dados estão
hdfs dfs -put nome_do_arquivo /endereço_do_arquivo 


# Executa arquivo python no HDFS para realizar MapReduce

python arquivo.py hdfs:///pasta/arquivo -r hadoop


# MRJob Pyhon Package: métodos mapper e reducer


# Remove arquivo do hdfs 

hdfs dfs -rm /pasta/arquivo


